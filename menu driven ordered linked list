/*
  Program to create an ORDERED Linked List with menu options
  Pranav
  2-12-2025
  orderedlinkedlist.c
*/
#include<stdio.h>
#include<stdlib.h>
#include<memory.h>

typedef struct ListType {
  int Data;
  struct ListType *Next;
} LISTNODE;

LISTNODE *Head;

//prototypes
void InitList();
void InsertNode(int num);
void DisplayList(LISTNODE *head);
void SearchNode(int num);
void DeleteNode(int num);

int main (){
  int choice, num;

  InitList();

  printf("Program to create an ORDERED Linked List\n");

  while(1){
    printf("\nMenu:\n");
    printf("1. Insert a number\n");
    printf("2. Display the list of numbers\n");
    printf("3. Search for a given data item\n");
    printf("4. Delete a given number\n");
    printf("5. Exit\n");
    printf("Enter your choice: ");
    scanf("%d", &choice);

    switch(choice){
      case 1:
        printf("Enter the number to insert: ");
        scanf("%d", &num);
        InsertNode(num);
        break;
      case 2:
        DisplayList(Head);
        break;
      case 3:
        printf("Enter the number to search: ");
        scanf("%d", &num);
        SearchNode(num);
        break;
      case 4:
        printf("Enter the number to delete: ");
        scanf("%d", &num);
        DeleteNode(num);
        break;
      case 5:
        exit(0);
      default:
        printf("Invalid choice. Try again.\n");
    }
  }
  return 0;
}

void InitList(){
  Head = NULL;
}

void InsertNode(int num){
  LISTNODE *Node, *Current, *Prev;
  Node = (LISTNODE *)malloc(sizeof(LISTNODE));
  Node->Data = num;
  Node->Next = NULL;

  if(Head == NULL || num < Head->Data){
    Node->Next = Head;
    Head = Node;
    return;
  }

  Prev = NULL;
  Current = Head;
  while(Current != NULL && Current->Data < num){
    Prev = Current;
    Current = Current->Next;
  }
  Prev->Next = Node;
  Node->Next = Current;
}

void DisplayList(LISTNODE *head){
  LISTNODE *Current;
  if(head == NULL){
    printf("List is empty\n");
    return;
  }
  Current = head;
  while(Current != NULL){
    printf("%d -> ", Current->Data);
    Current = Current->Next;
  }
  printf("NULL\n");
}

void SearchNode(int num){
  LISTNODE *Current = Head;
  while(Current != NULL){
    if(Current->Data == num){
      printf("Number %d found in the list\n", num);
      return;
    }
    Current = Current->Next;
  }
  printf("Number %d not found in the list\n", num);
}

void DeleteNode(int num){
  LISTNODE *Current = Head, *Prev = NULL;

  if(Current == NULL){
    printf("List is empty\n");
    return;
  }

  while(Current != NULL && Current->Data != num){
    Prev = Current;
    Current = Current->Next;
  }

  if(Current == NULL){
    printf("Number %d not found in the list\n", num);
    return;
  }

  if(Prev == NULL){
    Head = Current->Next;
  } else {
    Prev->Next = Current->Next;
  }
  free(Current);
  printf("Number %d deleted from the list\n", num);
}
